<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.android.guessaboo.StickerActivity">

    <Button
        android:id="@+id/uploadMask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Upload my mask"
        android:background="@drawable/button_bg"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="Mask must be 600*600 px- png format"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/maskName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:padding="5dp"
        android:background="@drawable/white_background"
        android:hint="Enter mask name"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="Select a mask, enter mask name, then tab save"
        android:textStyle="bold" />


    <GridView android:id="@+id/maskView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="3"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:horizontalSpacing="8dp"
        android:verticalSpacing="8dp"
        android:listSelector="@drawable/item_selector"
        android:stretchMode="columnWidth" >
    </GridView>

</LinearLayout>

